<h1>Books for Sale</h1>
<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Price</th>
    <tr>
    <% @books.each do |book|%>
        <tr>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.author%></td>
            <td><%= book.genre%></td>
            <td><%= book.price%></td>
        </tr>
    <% end %>
</table>